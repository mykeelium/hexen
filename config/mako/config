# Mako notification daemon configuration
# Tokyo Night color scheme

# General settings
max-visible=5
sort=-time
layer=overlay
anchor=top-right

# Appearance
font=JetBrainsMono Nerd Font 11
background-color=#1a1b26
text-color=#c0caf5
border-color=#7aa2f7
border-radius=8
border-size=2
padding=12
margin=10
width=350
height=150

# Behavior
default-timeout=5000
ignore-timeout=0

# Icons
icons=1
max-icon-size=48
icon-location=left

# Actions
on-button-left=dismiss
on-button-middle=none
on-button-right=dismiss-all

# Urgency-specific styles
[urgency=low]
border-color=#7dcfff
default-timeout=3000

[urgency=normal]
border-color=#7aa2f7

[urgency=critical]
border-color=#f7768e
background-color=#24283b
default-timeout=0
ignore-timeout=1

# Do not disturb mode
[mode=do-not-disturb]
invisible=1
